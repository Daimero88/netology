apiVersion: apps/v1
kind: Deployment
metadata:
  name: test-nginx
  namespace: ssilchin-nginx
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  replicas: 2
  selector:
    matchLabels:
      app: test-nginx
  template:
    metadata:
      labels:
        app: test-nginx
    spec:
      containers:
      - name: test-nginx
        image: ${REGISTRY}/test-nginx-app:latest
        ports:
        - containerPort: 80
